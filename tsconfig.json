{
  "include": ["src/**/*.ts", "test/**/*.ts"],
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true
  }
}
